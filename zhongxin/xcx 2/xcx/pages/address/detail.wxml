<view class="container" wx:if="{{addressDeatil!=undefined}}">
    <view class="common-header-xian"></view>
    <form bindsubmit="saveData">
        <view class="page__input">
            <view class="weui-cells">
                <view class="weui-cells weui-cells_form b-f">
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label f-30">收货人</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input f-30" name="consignee" placeholder="请输入收货人姓名" placeholderStyle="color:#999" value="{{address.consignee}}"></input>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label f-30">手机号</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input f-30" maxlength="11" name="mobile" placeholder="请输入收货人联系电话" placeholderStyle="color:#999" type="number" value="{{address.mobile}}"></input>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-cells m-top20">
                <view class="weui-cells weui-cells_form b-f">
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label f-30">所在地区</label>
                        </view>
                        <view class="weui-cell__bd">
                            <text bindtap="translate" class="infoText f-30">{{province}} {{city}} {{county}}</text>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__hd">
                            <label class="weui-label f-30">详细地址</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input f-30" name="address" placeholder="请输入街道小区楼层" placeholderStyle="color:#999" type="text" value="{{address.address}}"></input>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="padding-box m-top20 profile-btn">
            <button formType="submit">保 存</button>
        </view>
        <view animation="{{animation}}" bindtap="hiddenFloatView" class="animation-element-wrapper" data-id="444" style="visibility:{{show?'visible':'hidden'}}">
            <view catchtap="nono" class="animation-element">
                <text catchtap="hiddenFloatView" class="address-text left-bt" data-id="555">取消</text>
                <text catchtap="checkFloatView" class="address-text right-bt" data-id="666">确定</text>
                <view class="line"></view>
                <picker-view bindchange="bindChange" catchtap="nono" indicatorStyle="height: 50rpx;" value="{{value}}">
                    <picker-view-column>
                        <view wx:for="{{provinces}}" wx:for-item="sheng">
                {{sheng.region_name}}
              </view>
                    </picker-view-column>
                    <picker-view-column>
                        <view wx:for="{{citys}}">
                {{item.region_name}}
              </view>
                    </picker-view-column>
                    <picker-view-column>
                        <view wx:for="{{countys}}">
                {{item.region_name}}
              </view>
                    </picker-view-column>
                </picker-view>
            </view>
        </view>
        <view class="bargain-commont-bg hide{{showViewMol?'show':''}}"></view>
    </form>
</view>
<loading hidden="{{hidden}}" wx:else>加载中…</loading>
